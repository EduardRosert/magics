<magics version='3.0'>

  <drivers>
    <ps            name= 'contour_line_styles' />
    <gif_animation name= 'contour_line_styles' />
  </drivers>


  <!-- set up our definitions - elements that will be used later -->

  <definition>
      <polar_stereographic id  = 'view'
                           subpage_lower_left_longitude  = '-49'
                           subpage_lower_left_latitude   = '6'
                           subpage_upper_right_longitude = '105'
                           subpage_upper_right_latitude  = '39' />
  </definition>


    <page format ='a4' orientation = 'landscape' >

      <map> 
          
          <polar_stereographic use_id='view' />

           <coastlines>
             <coast colour = 'grey' />
           </coastlines>


            <!-- Now add a layer plotting MSL -->

            <plot>
                <grib input_file_name = 'data/p12pt850_MSL.grib'/>

                <contour>
                    <isoline thickness = '4'
                             colour    = 'orange'
                             style     = 'dot'>
                        <interval interval = '5'/>
                        <nohighlight/>
                    </isoline>
                </contour>


            </plot>


            <!-- Now add a layer plotting Temperature -->

            <plot>
                <grib input_file_name = 'data/p12pt850_T.grib'/>

                <contour>
                    <isoline thickness = '1'
                             style     = 'solid'
                             colour    = 'green'>
                        <interval interval = '2'/>
                        <nohighlight/>
                    </isoline>
                    <nohilo/>
                </contour>

            </plot>

            <text colour = 'orange'  lines = 'Thick-4 dot orange/.'></text>
            <text colour = 'green'   lines = './Thin solid green'></text>

            <text>HELLO</text>
            <text><magics_title /></text>
            <text>magics_title</text>

      </map>

    </page>






    <!-- Add a new page -->

    <page format ='a4' orientation = 'landscape' >

       <map> 
          <polar_stereographic use_id='view' />

         <coastlines>
           <coast colour = 'grey' />
         </coastlines>


          <!-- Now add a plot plotting MSL -->

          <plot>
              <grib input_file_name = 'data/p12pt850_MSL.grib'/>

              <contour>
                  <isoline thickness = '2'
                           colour    = 'blue'
                           style     = 'dash'
                           highlight            = 'off'>
                      <interval interval = '5'/>
                      <nohighlight/>
                  </isoline>
              </contour>

          </plot>


          <!-- Now add a layer plotting Temperature -->

          <plot>
              <grib input_file_name = 'data/p12pt850_T.grib'/>

              <contour>
                  <isoline thickness = '1'
                           style     = 'chain_dash'
                           colour    = 'red'
                           highlight           = 'off'>
                      <interval interval = '2'/>
                      <nohighlight/>
                  </isoline>
                  <nohilo/>
              </contour>

          </plot>

          <text colour = 'blue' lines = 'Thick-2 dash blue/.'></text>
          <text colour = 'red'  lines = './Thin chain_dash red'></text>

      </map>
    </page>

</magics>
