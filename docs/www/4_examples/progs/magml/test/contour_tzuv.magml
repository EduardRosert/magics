<magics version='3.0'>

  <drivers>
    <ps name= 'contour_tzuv' />
  </drivers>


    <page format ='a4' orientation = 'landscape' >

      <map> 
          

            <!-- Plot a shaded Temperature layer  -->

            <plot>
                <grib input_file_name = 'data/ztuv.grib'
                      field_position  = '2'/>
                <contour>
                    <noisoline>
                      <shading>
                        <polygon>
                            <area_fill/>
                        </polygon>
                      </shading>
                    </noisoline>
                    <nohilo/>
                </contour>
            </plot>


            <!-- Now add a layer plotting Z -->

            <plot>
                <grib input_file_name = 'data/ztuv.grib'
                      field_position  = '1'/>

                <contour>
                    <isoline thickness = '4'
                             colour    = 'black'>
                        <interval interval = '10'/>
                        <nohighlight/>
                    </isoline>
                    <nohilo/>
                </contour>
            </plot>




            <!-- Now add a layer plotting wind -->

            <plot>
                <grib input_file_name = 'data/ztuv.grib'
                      wind_position_1 = '3'
                      wind_position_2 = '4'/>

                <wind thinning_factor  = '4'
                      arrow_colour     = 'grey'/>
            </plot>

           <coastlines>
             <coast colour = 'black' />
           </coastlines>


      </map>

    </page>

</magics>

    
