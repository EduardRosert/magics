<magics version='3.0'>

    <drivers>
        <ps            name= 'contour_shaded' />
        <gif_animation name= 'contour_shaded' />
        <kml           name= 'contour_shaded' />
    </drivers>

    <page format ='a4' orientation = 'landscape' >

       <text display='absolute' bottom='94%' height='25%' colour='black'>Top line of text</text>


       <map margin_top='2cm' height = '60%'> 
          <polar_stereographic
                 subpage_lower_left_longitude  = '-30'
                 subpage_lower_left_latitude   = '30'
                 subpage_upper_right_longitude = '70'
                 subpage_upper_right_latitude  = '50' />


          <!-- First coastlines - for land and sea shading -->

          <coastlines>
             <coast>
                <landshading colour = 'rgb(1.0, 0.98, 0.9)'>
                    <seashading colour = 'rgb(0.95, 0.95, 1.0)' />
                </landshading>
             </coast>
          </coastlines>


           <!-- Z500 plot -->

           <plot>
              <grib input_file_name = 'data/z500.grb'/>
              <contour>
                <isoline style     = 'solid'
                         thickness = '5'
                         colour    = 'black'>

                  <highlight style     = 'dash'
                             colour    = 'black'
                             thickness = '3'
                             frequency = '2' />
                </isoline>

                <hilo>
                  <text hi_colour = 'black'
                        lo_colour = 'black' />
                </hilo>
                              

              </contour>
           </plot>


           <!-- T2m plot, shaded -->

           <plot>
              <grib input_file_name = 'data/t2m_fc12.grib'/>
              <contour>
                  <isoline>
                      <list level_list = '-80/-8/-4/0'/>
                      <label frequency = '1'/>
                      <shading>
                        <polygon>
                          <area_fill/>
                        </polygon>
                        <list colour_list = 'BLUE_PURPLE/GREENISH_BLUE/GREEN' />
                      </shading>
                  </isoline>
              </contour>
           </plot>


          <!-- Second coastline call - this one is just for the outline  -->

          <coastlines>
             <coast />
          </coastlines>


         <!-- Add a legend down the right-hand side of the page  -->

         <legend bottom='8%' left='70%' width='20%' height='50%' 
                 plot_direction='column' columns='1' font_size='0.3'
                 text_colour='Rgb(0.2, 0.2, 0.2)' border-colour='black' 
                 legend_title='on'
                 legend_title_text='Legend'>
         </legend>  


       </map> 


       <!-- Titles -->

       <text display='absolute' bottom='4%'  height='25%' colour='black'>Bottom line of text</text>




       <!-- Page id line and user logo -->

      <pageid line_height      = '0.25'
              line_colour      = 'blue'
              line_system_plot = 'on'
              line_date_plot   = 'on'
              line_errors_plot = 'on'
              line_user_text   = 'on'
              font             = 'serif'
              font_style       = 'normal'>

          <userlogo logo_filename = 'data/logo-w3ec2.gif'
                    logo_format   = 'gif'
                    logo_x        = '72'
                    logo_y        = '430'
                    logo_width    = '1.0'
                    logo_height   = '1.0' />
      </pageid>

    </page>
</magics>
