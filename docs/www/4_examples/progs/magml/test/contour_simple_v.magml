<magics version='3.0'>

    <drivers>
        <ps            name= 'contour_simple_v' />
        <gif_animation name= 'contour_simple_v' />
    </drivers>

    <page format ='a4' orientation = 'landscape' >

      <pageid line_colour = 'red'>
         <line_user_text>HELLO!</line_user_text>
      </pageid>


       <map> 
          <cylindrical subpage_lower_left_longitude  = '-20'
                       subpage_lower_left_latitude   = '20'
                       subpage_upper_right_longitude = '30'
                       subpage_upper_right_latitude  = '60' />

          <coastlines>
             <coast colour = '${coast_colour=olive}' />
          </coastlines>

           <plot>
                <grib input_file_name = 'data/z500.grb'/>
                <contour>
                    <isoline colour='$iso_colour'/>
                </contour>
           </plot>

           <text font = 'Times-Roman' colour = 'rgb(0.1,0.6,0.2)'>$title</text>

       </map>

    </page>
</magics>
