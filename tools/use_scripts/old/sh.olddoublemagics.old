# Set the environment for old doubleprecsion MAGICS
#
# Bourne/Korn Shell

version=old_r8

envSelected=${envSelected:=no}

if echo $envSelected | grep ${version}magics >/dev/null
then
        echo "${version}magics is already enabled"
        exit 0
fi

ARCH=`/usr/local/bin/arch`
case $ARCH in
	sgimips) MAGLIB="-L/usr/local/lib32 -lmag${version} -lMvD${version} -ljpeg -lftn -lfortran -lm"
		;;	
	hppa)   echo "Not supported on this platform"
		;;
esac
export MAGLIB

envSelected="${version}magics $envSelected"  ; export envSelected
