# Set the new environment for MAGICS
#

# Bourne Shell
if [ -f /usr/local/SGKS/lib/libfgks.so.1.0  -o -f /usr/local/SGKS/lib/libfgks.so.1 ]
then
  echo "Sh.newmagics is no longer available on Suns."
  echo "Please contact the Graphics Group for information".
  exit 1
else
   ARCH=`arch`
   case $ARCH in
      hppa) MAGLIB="-L/usr/local/lib,-lmag.new,-lfgks,-ldgks,-lcgks" ;;
         *) MAGLIB="-L/usr/local/lib32 -lmagGL.new -lMvDevices.new -lftn -lfortran -lm" ;;
   esac
   export MAGLIB
fi

envSelected="newmagics $envSelected"  ; export envSelected
