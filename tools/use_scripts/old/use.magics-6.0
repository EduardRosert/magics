#!/bin/csh
#
# File: $ECMWFHOME/use/use.magics-6.0
#
# Purpose: Set the environment for version 6.0 of MAGICS
#
# Authors: Richard Fisker
#
################################################################################

#
# Check if magics-6.0 is not already selected
#
if ($?envSelected == 0) setenv envSelected ""
foreach Keyword ($envSelected)
	if ($Keyword == "magics-6.0") exit
end

setenv LD_LIBRARYN32_PATH /usr/local/magics:${LD_LIBRARYN32_PATH}

# Mark environment magics-6.0 as read
#
setenv envSelected "magics-6.0 $envSelected"
