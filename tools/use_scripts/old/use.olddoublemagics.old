#!/bin/csh
#
# File: $ECMWFHOME/use/use.olddoublemagics
#
# Purpose: Set the environment for old double precision version of MAGICS
#
# Authors: Petra Kogel
#
# $Revision: 1.1 $    $Date: 1999/02/04 11:48:55 $
#
################################################################################
#
# Check if olddoublemagics is already selected
#
if ($?envSelected == 0) setenv envSelected ""
foreach Keyword ($envSelected)
	if ($Keyword == "olddoublemagics") exit
end
#
# Set MAGLIB
#
unsetenv MAG_COASTLINES
setenv MAGLIB "-L/usr/local/lib32 -lmagold_r8 -lMvDold_r8 -lftn -lfortran -lm"
setenv EMOSLIB "-lemos_r8"
#
# Mark environment olddoublemagics as read
#
setenv envSelected "olddoublemagics $envSelected"
