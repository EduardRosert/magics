<magics version='1.0'>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- First page, solid shading -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <page format ='a4' orientation = 'landscape' >

        <!-- subpage 1 - default settings -->
        
        <subpage>
           <nopageid />     <!--  remove the page id from this plot -->
           <mapview> 
              <cylindrical>
                <corners min_longitude = '-50'
                         min_latitude  = '20'
                         max_longitude = '50'
                         max_latitude  = '80' />
              </cylindrical>
           </mapview>

            <layer>
                <grib path = '../data/t850_fc_12.grib'/>
                <geocontour>
                    <noisoline>
                      <count max_level       = '1.0e+21'
                             min_level       = '-1.0e+21'
                             level_count     = '15'
                             reference_level = '0' />
                      <shading>
                        <polygon>
                            <area_fill/>
                        </polygon>
                      </shading>
                    </noisoline>
                    <nohilo />
                </geocontour>
            </layer>

           <coastlines>
             <coast colour = 'black' />
           </coastlines>

            <text colour = 'peach'>Solid shading</text>
         </subpage>
    </page>




    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Second page, dot shading -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~ -->


    <page format ='a4' orientation = 'landscape' >

        <!-- subpage 1 - default settings -->
        
        <subpage>
           <nopageid />     <!--  remove the page id from this plot -->
           <mapview> 
              <cylindrical>
                <corners min_longitude = '-50'
                         min_latitude  = '20'
                         max_longitude = '50'
                         max_latitude  = '80' />
              </cylindrical>
           </mapview>

            <layer>
                <grib path = '../data/t850_fc_12.grib'/>
                <geocontour>
                    <isoline line_colour = 'grey'>
                      <count max_level       = '1.0e+21'
                             min_level       = '-1.0e+21'
                             level_count     = '15'
                             reference_level = '0' />
                      <shading>
                        <polygon>
                          <hatch shade_hatch_index     = '0'
                                 shade_hatch_thickness = '1'
                                 shade_hatch_density   = '18.0' />                            
                        </polygon> 
                      </shading>
                    </isoline>
                    <nohilo />
                </geocontour>
            </layer>

           <coastlines>
             <coast colour = 'black' />
           </coastlines>

            <text colour = 'peach'>Hatch shading, isolines ON</text>
         </subpage>
    </page>


</magics>
    
