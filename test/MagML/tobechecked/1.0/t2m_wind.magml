<magics version='1.0'>
   
    <!--  Define the page dimensions -->

    <page format ='a4' orientation = 'landscape' >
    <subpage>


       <!--  The mapview defines how we view the area -->

       <mapview> 
         <polar_stereographic>
            <corners min_longitude = '-33'
                     min_latitude  = '23'
                     max_longitude = '72'
                     max_latitude  = '51' />
          </polar_stereographic>
       </mapview>




       <!--  A layer contains a data reference and its plotting attributes (t2m) -->

       <layer>
         <grib path = '../data/t2m_fc12.grib'/>
         <geocontour>
           <noisoline>
             <interval interval = '4.0' />
             <shading shade_max_level = '44' shade_min_level = '-40'>
               <list shade_colour_list = 'BLUE_PURPLE/BLUE_PURPLE/BLUE_PURPLE/BLUE_PURPLE/GREENISH_BLUE/BLUE_GREEN/BLUISH_GREEN/YELLOW_GREEN/GREENISH_YELLOW/YELLOW/ORANGISH_YELLOW/ORANGE_YELLOW/YELLOWISH_ORANGE/ORANGE/REDDISH_ORANGE/RED_ORANGE/ORANGISH_RED/RED/MAGENTA/MAGENTA' />
               <polygon>
                 <area_fill/>
               </polygon>
             </shading>
            </noisoline>
            <nohilo />
         </geocontour>
       </layer>


       <!--  Plot the layer with the wind arrows -->

       <layer>
         <grib path = '../data/wind30m_fc12.grib'/>
         <wind />
       </layer>


        

       <!--  Define and plot the coastlines with default attributes -->

       <coastlines />


       <!--  Define and plot the title text -->

       <text>2 metre temperature and 30 metre winds</text>

    </subpage>
    </page>
</magics>
