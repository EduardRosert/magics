<magics version='1.0'>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- First page, one subpage, global view -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <page format ='a4' orientation = 'landscape' >

        <subpage>
           <mapview> 
              <cylindrical />
           </mapview>

            <layer>
                <grib path = '../data/z500.grb'/>
                <geocontour />
            </layer>

           <coastlines>
             <coast colour = 'grey' />
             <grid  colour = 'grey' />
           </coastlines>

            <text colour = 'peach'>Page 1, global view</text>
         </subpage>
    </page>




    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Second page, two subpages -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ -->


    <page format ='a4' orientation = 'landscape'>

        <!-- subpage 1 - default settings -->
        
        <subpage bottom = '5%' left = '2%' height = '80%'>
           <nopageid />     <!--  remove the page id from this plot -->
           <mapview> 
              <cylindrical>
                <corners min_longitude = '0'
                         min_latitude  = '20'
                         max_longitude = '50'
                         max_latitude  = '80' />
              </cylindrical>
           </mapview>


           <coastlines>
             <coast colour = 'grey'>
               <landshading colour = 'rgb(0.8,0.9,0.8)' />
             </coast>
             <grid  colour = 'grey' />
           </coastlines>


            <layer>
                <grib path = '../data/z500.grb'/>
                <geocontour />
            </layer>


            <text colour = 'peach' font_size = '0.4'>Subpage 1</text>
         </subpage>



        <!-- subpage 2 - polar stereographic view -->
        
        <subpage bottom = '5%' left = '50%' height = '80%'>
           <nopageid />     <!--  remove the page id from this plot -->
           <mapview> 
              <polar_stereographic>
                <corners min_longitude = '-10'
                         min_latitude  = '20'
                         max_longitude = '30'
                         max_latitude  = '60' />
              </polar_stereographic>
           </mapview>


           <coastlines>
             <coast colour = 'grey'>
               <landshading colour = 'rgb(0.8,0.9,0.8)' />
             </coast>
             <grid  colour = 'grey' />
           </coastlines>


            <layer>
                <grib path = '../data/z500.grb'/>
                <geocontour />
            </layer>


            <text colour = 'peach' font_size = '0.4'>Subpage 2</text>
         </subpage>
    </page>


</magics>

    
